<% include ../partials/header %>
    <div class="row">
    <h1 style="text-align: center;">Edit <%=post.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/posts/<%=post._id%>?_method=PUT" method="POST" enctype="multipart/form-data" autocomplete="off">
            <div class="form-group">
                <input class="form-control" type="text" value="<%=post.name%>" name="post[name]">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" value="<%=post.price%>" name="post[price]">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" id="location" value="<%=post.location%>" name="post[location]">
            </div>
            <div class="form-group">
                <input class="form-control" type="file" id="image" name="image" accept="image/*">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%=post.description%>" name="post[description]">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/posts">Back</a>
        </div>
    </div>

<% include ../partials/footer %>