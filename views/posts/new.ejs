<% include ../partials/header %>
    <div class="row">
    <h1 style="text-align: center;">Create a New Destination</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/posts" method="POST" enctype="multipart/form-data" autocomplete="off">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="name" name="post[name]">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" placeholder="cost" name="post[price]" min="1" step="1">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="location" name="post[location]">
            </div>
            <div class="form-group">
                <input class="form-control" type="file" id="image" name="image" accept="image/*" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="description" name="post[description]">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/posts">Back</a>
        </div>
    </div>

<% include ../partials/footer %>